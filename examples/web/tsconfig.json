{
    "compilerOptions": {
        "module": "ES2015",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "Classic",
        "sourceMap": true,
        "outDir": ".",
        "baseUrl": ".",
        "lib": ["es2015", "dom"],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": []
}
